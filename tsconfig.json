{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,

    "useDefineForClassFields": true,
    // "strict": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "allowJs": true
  },
  "include": ["./src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
